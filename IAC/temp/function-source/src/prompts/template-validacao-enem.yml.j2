  - text: |
      Tema da Redação:
      {{ tema_redacao }}
      
      Enunciado da Redação:
      {{ enunciado_redacao }}
      
      Textos Motivadores:
      {{ textos_motivadores }}

      Redação do estudante:
      {{ redacao_estudante }}